<resources xmlns:ns2="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. , dependent on API level. This theme is replaced
         by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/secondary_color</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"> <!-- Theme.AppCompat.Light.DarkActionBar -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary_color</item>

    </style>

    <style name="FilterTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/secondary_color</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/secondary_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- =============================================================== -->
    <!-- Material-Light styles -->
    <!-- Sign Up -->
    <!-- =============================================================== -->

    <style name="page_background_white">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/sign_up_padding_left</item>
        <item name="android:paddingRight">@dimen/sign_up_padding_right</item>
        <item name="android:paddingTop">@dimen/sign_up_padding_top</item>
        <item name="android:paddingBottom">@dimen/sign_up_padding_bottom</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/secondary_color</item>
    </style>

    <style name="text_header">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sign_up_header_text_size</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:text">@string/sign_up_header</item>
    </style>

    <style name="text_label">
        <item name="android:textColor">@color/light_low_priority_text</item>
        <item name="android:textSize">@dimen/sign_up_label_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text_password_validation">
        <item name="android:textColor">@color/light_low_priority_text</item>
        <item name="android:textSize">@dimen/sign_up_label_text_size</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>

    <style name="edit_text">
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:backgroundTint">@color/light_low_priority_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textPersonName|textNoSuggestions|textVisiblePassword</item>
        <item name="android:lines">1</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColorHint">@color/light_low_priority_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="stated_button">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>

    <style name="horizontal_line_wh">
        <item name="android:background">#00000000</item>
    </style>

    <color name="actionbar_bg_wh">#AFAFAF</color>

    <style name="action_bar_wh" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg_wh</item>
        <item name="background">@color/actionbar_bg_wh</item>
    </style>

    <!-- =============================================================== -->
    <!-- Customize YOUR_CUSTOM_THEME Styles -->
    <!-- Define your own styles below. -->
    <!-- =============================================================== -->
    <style name="SignUpTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/light_low_priority_text</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AuthTitleText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="My.TextInputLayout.FilledBox.Padding" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/MyThemeOverlayFilledPadding</item>
    </style>

    <style name="MyThemeOverlayFilledPadding">
        <item name="editTextStyle">@style/ErrorTextAppearance</item>
    </style>

    <style name="ErrorTextAppearance" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <!-- left and right padding -->
        <item name="android:paddingStart" ns2:ignore="NewApi">2dp</item>
        <item name="android:paddingEnd" ns2:ignore="NewApi">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_medium_italic</item>
    </style>

    <style name="ErrorTextAppearanceMin" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <!-- left and right padding -->
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">0sp</item>
        <item name="android:fontFamily">@font/roboto_medium_italic</item>
    </style>

    <style name="EditTextInput" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="errorTextAppearance">@style/AppTheme.TextErrorAppearance</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow
        </item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:textSize">@dimen/sign_up_label_text_size</item>
        <item name="android:colorFocusedHighlight">@color/light_low_priority_text</item>
        <item name="android:colorActivatedHighlight">@color/light_low_priority_text</item>
        <item name="android:colorBackgroundFloating">@color/light_low_priority_text</item>

        <item name="android:colorControlNormal">@color/light_low_priority_text</item>
        <item name="android:colorControlActivated">@color/light_low_priority_text</item>
        <item name="android:colorControlHighlight">@color/light_low_priority_text</item>
    </style>

    <style name="AppTheme.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:background">@color/color_accent</item>
        <item name="android:colorFocusedHighlight">@color/color_accent</item>
        <item name="android:colorActivatedHighlight">@color/color_accent</item>
        <item name="android:colorBackgroundFloating">@color/color_accent</item>

        <item name="android:colorControlNormal">@color/light_low_priority_text</item>
        <item name="android:colorControlActivated">@color/color_accent</item>
        <item name="android:colorControlHighlight">@color/color_accent</item>
    </style>

    <style name="ReservationButtonStyle.Filter" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/filter_vehicle_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>
    </style>

    <style name="AndroidMediumTextCenteredSignal">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="AndroidMediumTextCenteredPrimary">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="AndroidTabLabelLightLowprio">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/text_input_layout_stroke_color</item>
        <item name="hintTextColor">@color/light_low_priority_text</item>
        <item name="android:textColorHint">@color/light_low_priority_text</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="TextInputLayoutHintText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/light_low_priority_text</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_states_material_primary_button</item>
    </style>

    <style name="MaterialTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!-- Style attributes -->
        <item name="boxCornerRadiusBottomStart">@dimen/default_margin</item>
        <item name="boxCornerRadiusTopStart">@dimen/default_margin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/default_margin</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/default_margin</item>
        <item name="boxBackgroundColor">@android:color/white</item>

        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="counterTextAppearance">@style/HintText</item>

        <item name="boxStrokeColor">@color/light_low_priority_text</item>
        <!-- Theme attributes -->
        <item name="android:textColorHint">#80000000</item>

        <item name="colorControlNormal">#000</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>


    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="CustomTabStyle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/booking_tab_text_size</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="backgroundTint">@color/color_state_material_bg_btn_toggle_group</item>
        <item name="iconTint">@color/color_state_material_icon_btn_toggle_group</item>
        <item name="strokeColor">@color/color_state_material_stroke_btn_toggle_group</item>

    </style>

    <style name="ThemeButtonColorToggle" parent="AppTheme">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorButtonNormal">@color/primary_color</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="strokeColor">@color/light_low_priority_text</item>
        <item name="strokeWidth">@dimen/smaller_margin</item>
        <item name="colorOnPrimary">@color/primary_color</item>
        <item name="colorOnPrimarySurface">@color/primary_color</item>
    </style>

    <style name="MaterialBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>
</resources>
