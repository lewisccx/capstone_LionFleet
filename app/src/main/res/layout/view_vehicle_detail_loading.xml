<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vehicle_detail_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/default_margin_horizontal"
    android:layout_marginVertical="26dp"
    android:background="@color/light_bg_2"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/loading_image"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/loading_message"
        android:indeterminateTint="@color/primary_color"
        app:layout_constraintEnd_toEndOf="@+id/loading_message"
        app:layout_constraintStart_toStartOf="@+id/loading_message"
        app:layout_constraintTop_toBottomOf="@+id/loading_message" />

    <TextView
        android:id="@+id/loading_message"
        style="@style/AndroidTabLabelPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicle_reservation_loading"
        android:textAlignment="center"
        android:textColor="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
