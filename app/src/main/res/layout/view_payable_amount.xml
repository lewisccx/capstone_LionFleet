<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/totalAmountPayTitle"
        style="@style/AndroidTabLabelLightLowprio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/booking_past_est_cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/totalAmountPayText"
        style="@style/AndroidButtonLabelWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/payable_amount_text_margin_vertical"
        android:background="@drawable/btn_rounded_dark_gray"
        android:paddingStart="@dimen/payable_amount_text_margin_horizontal"
        android:paddingTop="@dimen/payable_amount_text_padding_vertical"
        android:paddingEnd="@dimen/payable_amount_text_margin_horizontal"
        android:paddingBottom="@dimen/payable_amount_text_padding_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalAmountPayTitle"
        tools:text="$ 32,50" />

</androidx.constraintlayout.widget.ConstraintLayout>
